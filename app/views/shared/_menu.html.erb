<%= provide :main_menu do %>
  <header class="p-3 bg-dark text-white">
    <div class="container">
      <nav class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <% if policy(Spending).index? %>
            <li><%= nav_tab 'My spendings', spendings_path, class: 'nav-link px-2', current_page: current_page %></li>
          <% end %>
        </ul>
        <ul class="nav col-12 col-lg-auto mb-2 mb-md-0">
          <% if user_signed_in? %>
            <li>
              <%= nav_tab current_user.name, '#',
                class: 'nav-link px-2', current_page: current_page %>
              <li>
                <%= button_to 'Log out', logout_path,
                    class: 'btn btn-secondary', method: :delete %>
              </li>
            </li>
          <% else %>
            <li><%= nav_tab 'Log In', login_path,
              class: 'nav-link px-2', current_page: current_page %></li>
            <li><%= nav_tab 'Sign Up', signup_path,
              class: 'nav-link px-2', current_page: current_page %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
<% end %>