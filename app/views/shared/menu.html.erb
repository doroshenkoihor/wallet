<%= provide :main_menu do %>
  <header class="p-3 bg-dark text-white">
    <div class="container">
      <nav class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><%= nav_tab 'Home', root_path, class: 'nav-link px-2', current_page: current_page %></li>
          <li><%= nav_tab 'Authors', authors_path, class: 'nav-link px-2', current_page: current_page %></li>
          <% if policy(Genre).index? %>
            <li><%= nav_tab 'Genres', genres_path, class: 'nav-link px-2', current_page: current_page %></li>
          <% end %>
          <% if policy(Admin).index? %>
            <li><%= nav_tab 'Admins', admins_path, class: 'nav-link px-2', current_page: current_page %></li>
          <% end %>
        </ul>
        <ul class="nav col-12 col-lg-auto mb-2 mb-md-0">
          <% if user_signed_in? %>
            <li class="dropdown">
              <%= nav_tab current_user.name, '#',
                class: 'nav-link px-2 dropdown-toggle',
                data: {"bs-toggle": 'dropdown'}, current_page: current_page %>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'Log out', session_path,
                    class: 'dropdown-item', data: {method: :delete} %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= nav_tab 'Log In', new_session_path,
              class: 'nav-link px-2', current_page: current_page %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
<% end %>